@model IEnumerable<LUSSIS.Models.Requisition>

@{
    ViewBag.Title = "Pending";
}

<h2>Pending Requisition</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionEmployee.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestRemarks)
        </th>
        <th>
            @Html.DisplayName("View")
        </th>
        <th>
            @Html.DisplayName("Manage")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequisitionDate)
                @Html.HiddenFor(modelItem => item.RequisitionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequisitionEmployee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestRemarks)
            </td>
            <td>
                @Html.ActionLink("Details", "Detail", "Requisitions ", new { reqId = item.RequisitionId }, null)
            </td>
            <td>
                <a href="#" class="btn btn-success" onclick="ApproveReq(@item.RequisitionId)">Approve</a>
                <a href="#" class="btn btn-danger" onclick="RejectReq(@item.RequisitionId)">Reject</a>
            </td>
        </tr>
    }

</table>

<div class="modal" id="myApproveModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ApprovalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="myApproveModalBodyDiv">
                <p></p>
            </div>
        </div>
    </div>
</div>


<script>
    var ApproveReq = function (RequisitionId) {
        document.getElementById("ApprovalTitle").textContent = "Approve"
        var url = "/Requisitions/ApproveReq?Id=" + RequisitionId + "&Status=approved";

        $("#myApproveModalBodyDiv").load(url, function () {
            $("#myApproveModal").modal("show");
        })
    }
    var RejectReq = function (RequisitionId) {
        document.getElementById("ApprovalTitle").textContent = "Reject"
        var url = "/Requisitions/ApproveReq?Id=" + RequisitionId + "&Status=rejected";

        $("#myApproveModalBodyDiv").load(url, function () {
            $("#myApproveModal").modal("show");
        })
    }      
</script>