                var stationeryToUpdate = $(this).attr("data-id");
                var qty = document.getElementById('qty-' + $(this).attr("data-id")).value;
                if (stationeryToUpdate != '') {
                    // Perform the ajax post
                    $.post("/Requisitions/UpdateCartItem", { "id": stationeryToUpdate, "qty": qty },
                        function (data) {
