@model IEnumerable<LUSSIS.Models.WebDTO.Cart>

@{
    ViewBag.Title = "My Cart";
    var itemNums = new List<string>();
    var itemQty = new List<int>();

}

<h2>Requisition Cart</h2>
<hr />

@if (Model.Count() != 0)
{
    <table class="table table-striped table-hover">
        <tr class="table-active">
            <th>
                Stationery Item
            </th>
            <th>
                UOM
            </th>
            <th>
                Quantity
            </th>
            <th>
                Delete
            </th>
        </tr>

        @foreach (var item in Model)

        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.stationery.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stationery.UnitOfMeasure)
                </td>
                <td>
                    <div class="row">
                        <input type="number" class="form-control form-control-sm col-md-6" name="qty-@item.stationery.ItemNum" min="1" max="1000" value="@item.quantity" id="qty-@item.stationery.ItemNum">
                        <input type="submit" value="Update" class="UpdateLink btn btn-warning btn-sm" data-id="@item.stationery.ItemNum" />
                    </div>
                </td>
                <td>
                    <input type="submit" value="Delete" class="RemoveLink btn btn-danger btn-sm" data-id="@item.stationery.ItemNum" />
                </td>
            </tr>
            {
                itemNums.Add(@item.stationery.ItemNum);
                Session["itemNums"] = itemNums;
                itemQty.Add(@item.quantity);
                Session["itemQty"] = itemQty;
            }
        }
    </table>

    using (Html.BeginForm("SubmitReq", "Requisitions"))
    {
        <div class="row">
            <div class="form-group col-md-6">
                Remarks:<textarea class="form-control" rows="3" id="remarks" name="remarks"></textarea>
            </div>
            <div class="form-group col-md-6">
                <br />
                <input type="submit" name="button" class="btn btn-success btn-lg btn-block" value="Submit Requisition" style="float: right;" />
            </div>
        </div>
    }
}

else
{
    <div class="alert alert-dismissible alert-warning">
        <br />
        <strong>Your cart is empty, please add items to cart</strong>
        <br /><br />
    </div>
}




@section scripts {
    <script type="text/javascript">
        $(function () {
            // Document.ready -> link up remove event handler
            $(".RemoveLink").click(function () {
                // Get the id from the link
                var stationeryToDelete = $(this).attr("data-id");
                var qty = document.getElementById('qty-' + $(this).attr("data-id")).value;
                if (stationeryToDelete !== '') {
                    // Perform the ajax post
                    $.post("@Url.Content("~/")Requisitions/DeleteCartItem", { "id": stationeryToDelete, "qty": qty },
                        function () {
                            location.reload();
                        });
                }
            });
        });
        $(function () {
            $(".UpdateLink").click(function ()
            {
                var stationeryToUpdate = $(this).attr("data-id");
                var qty = document.getElementById('qty-' + $(this).attr("data-id")).value;

                if(qty > 0)
                {
                    $.post("@Url.Content("~/")Requisitions/UpdateCartItem", { "id": stationeryToUpdate, "qty": qty },
                        function () {
                            location.reload();
                        });
                }
                else
                {
                    alert("Please input a valid quantity");
                }
            });
        });
    </script>
}

