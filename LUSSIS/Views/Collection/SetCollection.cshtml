@model LUSSIS.Models.WebDTO.ManageCollectionDTO

@{
    ViewBag.Title = "Manage Collection Point";
}

<h2>Manage Collection Point</h2>

<table class="table table-hover">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.CollectionPoint.CollectionName)*@
            Current Collection Point and Time
        </th>
    </tr>
    <tr>

        <td>

            @Html.DisplayFor(model => model.CollectionPoint.CollectionName)

            @Html.DisplayFor(model => model.CollectionPoint.Time)

        </td>
    </tr>
</table>
<hr />
<nav class="navbar navbar-light bg-light">
    <div class="navbar-nav mr-auto">
        @using (Html.BeginForm("UpdateCollection", "Collection", FormMethod.Post))
        {

            foreach (var item in Model.GetAll)
            {
                @Html.RadioButtonFor(m => m.CollectionPoint.CollectionPointId, item.CollectionPointId,
                               item.CollectionName == Model.CollectionPoint.CollectionName ? new { @checked = "checked" } : null)
                @item.CollectionName
                <text>  </text>
                @item.Time

                <br />
            }

            <br />
            <input type="submit" value="Set New Collection Point" class="btn btn-success my-2 my-sm-0" />

        }
    </div>
</nav>
<br />

