

@{
    ViewBag.Title = "Remark";
}



    <form id="approveForm">

        <div class="form-group">
            <label for="comment">Enter your remark</label>
            <textarea class="form-control" rows="5" id="comment" name="comment"></textarea>
            <input type="hidden" name="status" value="@ViewBag.status" />
            <input type="hidden" name="checkList" value="@ViewBag.checkList" />
        </div>
    </form>


<div>
    <a href="#" class="btn btn-success" id="approve">
        @(ViewBag.status == "approved" ? "Confirm Approve" : "Confirm Reject")
    </a>
    <a href="#" class="btn btn-danger" data-dismiss="modal"> Cancel</a>
</div>


    <script>
        $(document).ready(function () {
            $("#approve").click(function() {
                var formdata = $("#approveForm").serialize();

                $.ajax({
                    type: "POST",
                    url: "@Url.Content("~/")StockAdjustment/_ApproveReject",
                    data: formdata,
                    success: function() {
                        $("#myApproveModal").modal("hide");

                    }
                });
                location.reload();
            });
        })
    </script>

