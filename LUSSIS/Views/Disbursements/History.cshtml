@model PagedList.IPagedList<LUSSIS.Models.Disbursement>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Disbursement History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Disbursement History</h2>
<hr />
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="navbar-nav mr-auto"></div>
    <div class="form-inline my-2 my-lg-0">
        @using (Html.BeginForm())
    {
        <span class="d-inline nav-item nav-link">Find By Department: </span>
        @Html.TextBox("SearchString", null, new { @class = "form-control mr-sm-2", placeholder = "Search" })
        <span class="d-inline nav-item nav-link"><input type="submit" placeholder="Search" class="btn btn-secondary my-2 my-sm-0" /></span>

}
        <form action="/Disbursements/History" method="get">
            <span style="float:right">
                <input type="submit" value="Show All" class="btn btn-secondary my-2 my-sm-0" />
            </span>
        </form>
    </div>
</nav>
<hr />
<table class="table table-striped table-hover">
    <tr>
        <th>
            Department
        </th>
        <th>
            Collection Point
        </th>
        <th>
            Collection Date
        </th>


        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DeptName)
            </td>
            <td>
                @Html.HiddenFor(modelItem => item.AcknowledgeEmployee.Title)
                @Html.DisplayFor(modelItem => item.CollectionPoint.CollectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionDate)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <span>
                    <a href="@Url.Action("ViewDetails")/@item.DisbursementId" class="btn btn-outline-success">
                        <span class="glyphicon glyphicon-plus-sign"></span>
                        View Details
                    </a>
                </span>
                
            </td>
        </tr>
    }

</table>


    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("History", new { page, currentFilter = ViewBag.CurrentFilter }))
